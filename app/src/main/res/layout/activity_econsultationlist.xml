<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Econsultationlist"
    android:background="@drawable/homebg">

    <TextView
        android:id="@+id/econsultancytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Get Advice from Experts"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="34sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/econsultancytext"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPsychologist"
            android:layout_width="match_parent"
            android:layout_height="1in"
            app:cardBackgroundColor="@color/khaki"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="1in"
                android:layout_height="1in"
                android:layout_margin="5dp"
                android:background="@color/cadet_blue"
                android:elevation="3dp"
                app:srcCompat="@drawable/doctors" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="1.1in"
                android:paddingTop="55dp"
                android:text="Psychologist"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTherapist"
            android:layout_width="match_parent"
            android:layout_height="1in"
            app:cardBackgroundColor="@color/khaki"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="1in"
                android:layout_height="1in"
                android:layout_margin="5dp"
                android:background="@color/cadet_blue"
                android:elevation="3dp"
                app:srcCompat="@drawable/doctors" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="1.1in"
                android:paddingTop="55dp"
                android:text="Therapist"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNutritionst"
            android:layout_width="match_parent"
            android:layout_height="1in"
            app:cardBackgroundColor="@color/khaki"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="1in"
                android:layout_height="1in"
                android:layout_margin="5dp"
                android:background="@color/cadet_blue"
                android:elevation="3dp"
                app:srcCompat="@drawable/doctors" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="1.1in"
                android:paddingTop="55dp"
                android:text="Nutritionist"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonEconsultantBack"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Back"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/cardNutritionst">



        </Button>


    </LinearLayout>


</RelativeLayout>